<div>
  <div class="container-fluid">
    <h1 class="text-center">Your friendly neighborhood marketplace!</h1>
    <div class="input-group mb-3">
      <input
        type="text"
        placeholder="What are you looking for...?"
        class="form-control"
        aria-label="Text input with dropdown button"
      />
      <button
        class="btn btn-outline-secondary dropdown-toggle"
        type="button"
        data-bs-toggle="dropdown"
        aria-expanded="false"
      >Categories</button>
      <ul class="dropdown-menu dropdown-menu-end">
        <li><a class="dropdown-item" href="#">Vehicles</a></li>
        <li><a class="dropdown-item" href="#">Furniture</a></li>
        <li><a class="dropdown-item" href="#">Toys</a></li>
        <li><a class="dropdown-item" href="#">Clothing</a></li>
        <li><a class="dropdown-item" href="#">Misc.</a></li>
      </ul>
    </div>
  </div>
</div>

<div>
  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {{#each posts as |post|}}
          <div class="col">
            <div class="card h-100 shadow-sm">
              <svg
                class="bd-placeholder-img card-img-top"
                width="100%"
                height="225"
                xmlns="http://www.w3.org/2000/svg"
                role="img"
                aria-label="Placeholder: Thumbnail"
                preserveAspectRatio="xMidYMid slice"
                focusable="false"
              ><title>Placeholder</title><rect
                  width="100%"
                  height="100%"
                  fill="#55595c"
                ></rect><text
                  x="50%"
                  y="50%"
                  fill="#eceeef"
                  dy=".3em"
                >Thumbnail</text></svg>
              <div class="card-body">
                <h3 class="card-text" overflow="hidden">{{post.title}}</h3>
                <p class="card-text">{{post.price}}</p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <button
                      type="button"
                      class="btn btn-sm btn-outline-secondary"
                    >View</button>
                  </div>
                  <small class="text-muted">9 mins</small>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>