<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The Front Yard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container-fluid">
      <header
        class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom"
      >
        <a href="/" class="d-flex col mb-2 mb-md-0 text-dark">
          <img
            class="bi me-2"
            width="250"
            height="100"
            alt="img"
            src="/images/image.png"
          />
        </a>
        <h2 class="col-12 col-md-4 text-center text-align-center">Your friendly
          neighborhood marketplace!</h2>
        <div class="col text-end">{{#if loggedIn}}
            <a href="/dashboard"><button
                type="button listing"
                class="btn btn-outline-danger me-2"
              >Add Listing</button></a>
            <button
              type="button"
              class="btn btn-danger"
              id="logout-btn"
            >Logout</button>
          {{else}}
            <a href="/login"><button
                type="button"
                class="btn btn-danger"
              >Login/Sign-up</button></a>
          {{/if}}
        </div>
        <nav class="navbar navbar-expand-lg bg-light col-12">
          <div class="container-fluid">
            <ul class="navbar-nav row w-100">
              <li class="nav-item active col text-center">
                <a class="nav-link" href="/">All Posts</a>
              </li>
              <li class="nav-item active col text-center">
                <a class="nav-link" href="/posts/categories/1">Electronics</a>
              </li>
              <li class="nav-item active col text-center">
                <a class="nav-link" href="posts/categories/2">Furniture</a>
              </li>
              <li class="nav-item active col text-center">
                <a class="nav-link" href="posts/categories/3">Tools</a>
              </li>
              <li class="nav-item active col text-center">
                <a class="nav-link" href="posts/categories/4">Vehicles</a>
              </li>
              <li class="nav-item active col text-center">
                <a class="nav-link" href="posts/categories/5">Miscellaneous</a>
              </li>
            </ul>
          </div>
        </nav>
      </header>
    </div>
    {{{body}}}
    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}
    <script
      src="https://cdn.jsdelivr.net/npm/darkmode-js@1.5.7/lib/darkmode-js.min.js"
    ></script>
    <script>
      function addDarkmodeWidget() { new Darkmode().showWidget(); }
      window.addEventListener('load', addDarkmodeWidget);
    </script>
  </body>
</html>